{
  "name": "shell",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "clean": "rimraf dist",
    "dev" : "concurrently --kill-others \"npm run build\" \"npm run start\"",
    "start": "live-server dist/shell --port=4200 --live-reload-port=49200",
    "build": "npm-run-all clean npx-build-plus:copy-assets --parallel build:*",
    "build:clients:a": "ng build --prod --single-bundle --project client-a --output-hashing none --vendor-chunk false --output-path src/assets/micro-frontends/client-a --watch",
    "build:clients:b": "ng build --prod --single-bundle --project client-b --output-hashing none --vendor-chunk false --output-path src/assets/micro-frontends/client-b --watch",
    "build:shell": "ng build --project shell --watch",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "npx-build-plus:copy-assets": "node copy-wc-polyfill.js && node copy-bundles.js && node projects/client-a/copy-bundles.js && node projects/client-b/copy-bundles.js",
    "build-webpack:externals": "ng build --extra-webpack-config webpack.externals.js --prod ",
    "build:externals:shell": "ng build --extra-webpack-config webpack.externals.js --prod --project shell ",
    "build:externals:clients:a": "ng build --extra-webpack-config webpack.externals.js --prod --project client-a --single-bundle --output-hashing none --output-path src/assets/micro-frontends/client-a",
    "build:externals:clients:b": "ng build --extra-webpack-config webpack.externals.js --prod --project client-b --single-bundle --output-hashing none --output-path src/assets/micro-frontends/client-b",
    "build:externals": "npm-run-all --parallel build:externals:*"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.0.1",
    "@angular/common": "~8.0.1",
    "@angular/compiler": "~8.0.1",
    "@angular/core": "~8.0.1",
    "@angular/elements": "~8.0.1",
    "@angular/forms": "~8.0.1",
    "@angular/platform-browser": "~8.0.1",
    "@angular/platform-browser-dynamic": "~8.0.1",
    "@angular/router": "~8.0.1",
    "@webcomponents/custom-elements": "^1.1.0",
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "bootstrap": "^3.3.7",
    "copy": "^0.3.2",
    "core-js": "^2.5.4",
    "ngx-build-plus": "^8.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "rxjs": "6.6.7",
    "tslib": "^1.9.0",
    "watch": "^1.0.2",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.800.3",
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular/cli": "^8.0.3",
    "@angular/compiler-cli": "~8.0.1",
    "@angular/language-service": "~8.0.1",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.1",
    "concurrently": "^6.0.0",
    "cpr": "^3.0.1",
    "css-loader": "^0.28.11",
    "html-loader": "^0.5.5",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "live-server": "^1.2.0",
    "protractor": "~5.3.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~3.4.5",
    "webpack-cli": "^2.0.14"
  }
}
